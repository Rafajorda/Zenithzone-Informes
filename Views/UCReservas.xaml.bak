<UserControl x:Class="Views.UCReservas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#FFF5F5F5" CornerRadius="6" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Gestión de Reservas" FontSize="18" FontWeight="Bold" Foreground="#FF2B2B2B" />

            <Border Grid.Row="1" Background="White" CornerRadius="6" Margin="0,10,0,10" Padding="12" BorderBrush="#FFE6E6E6" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>

                        <ColumnDefinition Width="20"/>

                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>

                        <ColumnDefinition Width="20"/>

                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Socio -->
                    <TextBlock Text="Socio:"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="0,0,8,0"/>

                    <ComboBox Grid.Column="1"
                  Height="30"/>

                    <!-- Actividad -->
                    <TextBlock Text="Actividad:"
                   Grid.Column="3"
                   VerticalAlignment="Center"
                   Margin="0,0,8,0"/>   

                    <ComboBox Grid.Column="4"
                  Height="30"/>

                    <!-- Fecha -->
                    <TextBlock Text="Fecha:"
                   Grid.Column="6"
                   VerticalAlignment="Center"
                   Margin="0,0,8,0"/>

                    <DatePicker Grid.Column="7"
                    Height="30"/>
                </Grid>

            </Border>

            <!-- Data grid -->
            <DataGrid x:Name="DgReservas" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single" RowBackground="White" AlternatingRowBackground="#FFF7F7F7" GridLinesVisibility="None">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding IdCliente}" Width="60" />
                    <DataGridTextColumn Header="Socio" Binding="{Binding Socio}" Width="*" />
                    <DataGridTextColumn Header="Actividad" Binding="{Binding Actividad}" Width="*" />
                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Actions -->
            <StackPanel Grid.Row="3"   Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="BtnNuevo" Command="{Binding AgregarCommand}" Content="Nuevo" Width="100" Background="#FF0A7BD2" Foreground="White" Margin="0,0,8,0"/>
                <Button x:Name="BtnGuardar" Command="{Binding GuardarCommand}" Content="Guardar" Width="100" Background="#FF3BB70F" Foreground="White" Margin="0,0,8,0"/>
                <Button x:Name="BtnEditar" Command="{Binding EditarCommand}" Content="Editar" Width="100" Background="#FFCEC20E" Foreground="White" Margin="0,0,8,0"/>
                <Button x:Name="BtnEliminar" Command="{Binding EliminarCommand}" Content="Eliminar" Width="100" Background="#FFE60404" Foreground="White" Margin="0,0,8,0"/>
                <Button x:Name="BtnCancelar" Command="{Binding CancelarCommand}" Content="Cancelar" Width="100" Background="#FF444444" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>


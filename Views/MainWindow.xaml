<Window x:Class="Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Views"
        xmlns:svg="clr-namespace:SharpVectors.Converters;assembly=SharpVectors.Converters.Wpf"
     xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel" 
        mc:Ignorable="d"
        Title="ZenithZone" Height="450" Width="800">
    <!-- -->
    <Window.Resources>
        <!-- existing styles unchanged -->
        <Style x:Key="MenuRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="#33000000"/>
                            </Trigger>
                            
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="#FF036B3A"/>
                                <Setter Property="FontWeight"
                                        Value="Bold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter
                                VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#33000000"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF036B3A"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ... estilos ... -->
        
        <!-- DataTemplate para la pantalla de inicio -->
        <DataTemplate DataType="{x:Type vm:InicioViewModel}">
            <local:UCInicio />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:ReservasViewModel}">
            <local:UCReservas /> 
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ActividadesViewModel}">
            <local:UCActividades />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SociosViewModel}">
            <local:UCSocios />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:InformesViewModel}">
            <local:UCInformes />
        </DataTemplate>

    </Window.Resources>
    <DockPanel LastChildFill="True">
        <!-- Top bar: header + menu -->
        <Grid DockPanel.Dock="Top" Background="#FF2B2B2B" Height="31">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6,0,12,0" Cursor="Hand">

                <svg:SvgViewbox Width="24" Height="24" Margin="0,0,8,0" Source="/assets/zenithzonesinnombre.svg" Stretch="Uniform" VerticalAlignment="Center"/>
                <TextBlock Text="ZenithZone" Foreground="#FA6400" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Menu items -->
            <Grid Grid.Column="1" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <RadioButton x:Name="RbtnReservas" Command="{Binding ShowReservasCommand}" Grid.Column="0" GroupName="Pagina" Style="{StaticResource MenuRadioButtonStyle}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="6,0,6,0" Height="41" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <svg:SvgViewbox Width="18" Height="18" Margin="0,0,8,0" Source="/assets/ticket-svgrepo-com.svg" Stretch="Uniform" VerticalAlignment="Center"/>
                        <TextBlock Text="Reservas" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton x:Name="RbtnActividades" Command="{Binding ShowActividadesCommand}" Grid.Column="1" GroupName="Pagina" Style="{StaticResource MenuRadioButtonStyle}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="6,0,6,0" Height="41" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <svg:SvgViewbox Width="18" Height="18" Margin="0,0,8,0" Source="/assets/sports-svgrepo-com.svg" Stretch="Uniform" VerticalAlignment="Center"/>
                        <TextBlock Text="Actividades" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton x:Name="RbtnSocios" Command="{Binding ShowSociosCommand}" Grid.Column="2" GroupName="Pagina" Style="{StaticResource MenuRadioButtonStyle}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="6,0,6,0" Height="41" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <svg:SvgViewbox Width="18" Height="18" Margin="0,0,8,0" Source="/assets/user.svg" Stretch="Uniform" VerticalAlignment="Center"/>
                        <TextBlock Text="Socios" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton x:Name="RbtnInformes" Command="{Binding ShowInformesCommand}" Grid.Column="3" GroupName="Pagina" Style="{StaticResource MenuRadioButtonStyle}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="6,0,6,0" Height="41" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <svg:SvgViewbox Width="18" Height="18" Margin="0,0,8,0" Source="/assets/user.svg" Stretch="Uniform" VerticalAlignment="Center"/>
                        <TextBlock Text="Informes" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <Button x:Name="BtnSalir" Command="{Binding SalirCommand}" Grid.Column="4" Style="{StaticResource MenuButtonStyle}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="6,0,12,0" Height="41" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <svg:SvgViewbox Width="18" Height="18" Margin="0,0,8,0" Source="/assets/exit.svg" Stretch="Uniform" VerticalAlignment="Center"/>
                        <TextBlock Text="Salir" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>

        <ContentControl x:Name="MainContent" Content="{Binding CurrentViewModel}" />
       

    </DockPanel>
</Window>
